package HospitalManagementSystem;

import java.util.ArrayList;
import java.util.HashMap;

public class Hospital {
    public static ArrayList<Doctor> doctors = new ArrayList<>();
    public static ArrayList<Patient> patients = new ArrayList<>();
    public static ArrayList<Appointment> appointments = new ArrayList<>();
    
    
    private static HashMap<String, String> doctorAvailability = new HashMap<>();

    public static void addDoctor(Doctor d) {
        doctors.add(d);
    }

    public static void addPatient(Patient p) {
        patients.add(p);
    }

    public static void addAppointment(Appointment a) {
        appointments.add(a);
    }
    
    
    public static void setDoctorAvailability(String doctorName, String status) {
        doctorAvailability.put(doctorName.toLowerCase(), status);
    }

    public static String getDoctorAvailability(String doctorName) {
        return doctorAvailability.get(doctorName.toLowerCase());
    }
}
